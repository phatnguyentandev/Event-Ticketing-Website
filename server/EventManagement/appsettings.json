{
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft.AspNetCore": "Warning"
    }
  },
  "AllowedHosts": "*",
  "ConnectionStrings": {
    "StorageAccount": "${STORAGE_ACCOUNT_CONNECTION_STRING}",
    "DefaultSQLConnection": "${DEFAULT_SQL_CONNECTION}"
  },

  "ApiSetting": {
    "Secret": "${API_SECRET_KEY}"
  },

  "MailSettings": {
    "Mail": "${MAIL_ADDRESS}",
    "DisplayName": "${MAIL_DISPLAY_NAME}",
    "Password": "${MAIL_PASSWORD}",
    "Host": "${MAIL_HOST}",
    "Port": "${MAIL_PORT}"
  },
  
  "StripeSettings": {
    "SecretKey": "${STRIPE_SECRET_KEY}"
  }
}
